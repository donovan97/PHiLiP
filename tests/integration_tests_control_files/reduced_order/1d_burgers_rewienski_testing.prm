# Listing of Parameters
# ---------------------

set test_type = POD_adaptation

# Number of dimensions
set dimension = 1

# The PDE we want to solve.
set pde_type  = burgers_rewienski
set use_weak_form = true
set use_collocated_nodes = false

# use the grid refinement study class to generate the grid
subsection grid refinement study
 set num_refinements = 10
 set poly_degree = 0
 set grid_left = 0.0
 set grid_right = 100.0
end

subsection flow_solver
  set flow_case_type = burgers_rewienski_snapshot
end

#Burgers parameters
subsection burgers
 set rewienski_a = 3.0
 set rewienski_b = 0.012
end

#Reduced order parameters
subsection reduced order
  set adaptation_tolerance = 0.0000001
  set adapt_coarse_basis_constant = 5
  set coarse_basis_dimension = 18
  set fine_basis_dimension = 7
  set num_sensitivities = 7
  set coarse_expanded_basis_dimension = 36
  set fine_expanded_basis_dimension = 14
  set path_to_search = ./pod_basis/burgers_rewienski_sensitivity_1param/
  set method_of_snapshots = true
  set consider_error_sign = false
end

subsection linear solver
  set linear_solver_type = direct
end

subsection ODE solver
  set nonlinear_max_iterations = 50
  set nonlinear_steady_residual_tolerance = 1e-14
  set print_iteration_modulo  = 1
  set ode_solver_type = implicit
end

subsection manufactured solution convergence study
  set use_manufactured_source_term = true
end